* {
    separatorcolor:              var(foreground);
    background-color:            transparent;
    spacing:                     2;
    blue:                        rgba ( 137, 180, 250, 100 % );
    background:                  rgba ( 30, 30, 46, 50% );
    foreground:                  rgba ( 205, 214, 244, 100 % );
    selected-background:         var(blue);
    selected-foreground:         rgba (30, 30, 46, 100%);
}
element {
    padding: 10px;
    border-radius: 30;
    cursor:  pointer;
    spacing: 5px ;
    border:  0;
}
element normal {
    background-color: var(background-color);
    text-color:       var(foreground);
}
element selected {
    background-color: var(selected-background);
    text-color:       var(selected-foreground);
}
element-text {
    background-color: transparent;
    cursor:           inherit;
    highlight:        inherit;
    text-color:       inherit;
}
element-icon {
    background-color: transparent;
    size:             1.0000em ;
    cursor:           inherit;
    text-color:       inherit;
}
