window {
    fullscreen: true;
    transparency: "real";
    background-color: var(background);
    location: center;
    anchor: center;
}
mainbox {
     padding:          20;
     //background-color: var(background);
     border-radius:    25;
     margin:           40% 25%;
}
textbox {
    text-color: var(foreground);
}
listview {
    padding:      2px 0px 0px ;
    scrollbar:    false;
    //border-color: var(separatorcolor);
    spacing:      2px ;
    fixed-height: 0;
    border:       2px dash 0px 0px ;
}
scrollbar {
    width:        4px ;
    padding:      0;
    handle-width: 8px ;
    border:       0;
    handle-color: var(foreground);
}
sidebar {
    border-color: var(separatorcolor);
    border:       2px dash 0px 0px ;
}
button {
    cursor:     pointer;
    spacing:    0;
    text-color: var(foreground);
}
button selected {
    background-color: var(selected-background);
    text-color:       var(selected-foreground);
}
num-filtered-rows {
    expand:     false;
    text-color: Gray;
}
num-rows {
    expand:     false;
    text-color: Gray;
}
textbox-num-sep {
    expand:     false;
    str:        "/";
    text-color: Gray;
}
inputbar {
    padding:           15px ;
    spacing:           0px ;
    border-color:      var(blue);
    border:            3px;
    border-radius:     25px;
    text-color: var(foreground);
    children:   [ "prompt","textbox-prompt-colon","entry","overlay","case-indicator" ];
}
overlay {
    padding:          0px 0.2000em ;
    background-color: var(foreground);
    foreground-color: var(background-color);
    margin:           0px 0.2000em ;
    text-color:       var(background-color);
}
case-indicator {
    spacing:    0;
    text-color: var(foreground);
}
entry {
    text-color:        var(foreground);
    cursor:            text;
    spacing:           0;
    placeholder-color: Gray;
    placeholder:       "Search";
}
prompt {
    spacing:    0;
    text-color: var(foreground);
}
textbox-prompt-colon {
    margin:     0px 0.3000em 0.0000em 0.0000em ;
    expand:     false;
    str:        " ";
    text-color: inherit;
}
